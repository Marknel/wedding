= form_for @job do |f|
  - if @job.errors.any?
    #error_explanation
      %h2= "#{pluralize(@job.errors.count, "error")} prohibited this job from being saved:"
      %ul
        - @job.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :due_at
    = f.datetime_select :due_at
  .field
    = f.label :person_responsible
    = f.text_field :person_responsible
  .field
    = f.label :location
    = f.text_field :location
  .field
    = f.label :maps_url
    = f.text_field :maps_url
  .field
    = f.label :notes
    = f.text_area :notes
  .actions
    = f.submit 'Save'
